<div class="container">
  <div class="row show">
    <div class="col-xs-12">
      <h1><%= @article.title %></h1>
      <p><%= @article.content %></p>
    </div>
  </div>
  <div class="box">
    <div class="row sm-box">
      <div class="col-xs-12 col-md-4">
        <%= link_to "Edit", edit_article_path(@article) %>
      </div>
    </div>
    <div class="row sm-box">
      <div class="col-xs-12 col-md-4">
        <%= link_to "Delete", article_path(@article),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </div>
    </div>
    <div class="row sm-box">
      <div class="col-xs-12 col-md-4">
        <%= link_to "Articles", articles_path %>
      </div>
    </div>
  </div>
  </div>
</div>
